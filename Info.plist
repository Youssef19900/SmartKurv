<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleName</key><string>SmartKurv</string>
  <key>CFBundleIdentifier</key><string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleShortVersionString</key><string>1.0</string>
  <key>CFBundleVersion</key><string>1</string>

  <!-- VIGTIGT: peg på AppIcon i Assets.xcassets -->
  <key>CFBundleIconName</key><string>AppIcon</string>

  <!-- Krævet af App Store for iOS 14+ -->
  <key>UILaunchStoryboardName</key><string>LaunchScreen</string>

  <!-- Orienteringer (iPhone) -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- Gør app’en iPhone-only (undgår iPad-kravene) -->
  <key>UIDeviceFamily</key>
  <array>
    <integer>1</integer> <!-- iPhone/iPod touch -->
  </array>

  <!-- Din tekst bevares -->
  <key>NSLocationWhenInUseUsageDescription</key>
  <string>SmartKurv bruger din lokation til at finde billigste butikker i nærheden.</string>
</dict>
</plist>
