<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Grundlæggende metadata -->
  <key>CFBundleName</key>
  <string>SmartKurv</string>
  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleShortVersionString</key>
  <string>1.1</string>
  <key>CFBundleVersion</key>
  <string>1</string>

  <!-- Launch screen (Storyboard navnet uden .storyboard) -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>

  <!-- Kun iPhone -->
  <key>UIDeviceFamily</key>
  <array>
    <integer>1</integer>
  </array>

  <!-- Orienteringer -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- Tilladelser -->
  <key>NSLocationWhenInUseUsageDescription</key>
  <string>SmartKurv bruger din lokation til at finde billigste butikker i nærheden.</string>

  <!-- Dark mode -->
  <key>UIUserInterfaceStyle</key>
  <string>Dark</string>

  <!-- Ikoner via Asset Catalog -->
  <key>CFBundleIconName</key>
  <string>AppIcon</string>

  <!-- Eksplicit ikon-træ (sikrer altool kan matche 120/180) -->
  <key>CFBundleIcons</key>
  <dict>
    <key>CFBundlePrimaryIcon</key>
    <dict>
      <key>CFBundleIconName</key>
      <string>AppIcon</string>
      <key>CFBundleIconFiles</key>
      <array>
        <string>AppIcon-60@2x</string> <!-- 120x120 -->
        <string>AppIcon-60@3x</string> <!-- 180x180 -->
      </array>
    </dict>
  </dict>
</dict>
</plist>
